# Appearace

# font
font pango:Fira Sans 12

# border
for_window [class=".*"] border pixel 1
hide_edge_borders smart

# Colors

# see: ~/.Xresources
set_from_resource $color_bg background
set_from_resource $color_fg foreground
set_from_resource $color_0  color0
set_from_resource $color_1  color1
set_from_resource $color_2  color2
set_from_resource $color_3  color3
set_from_resource $color_4  color4
set_from_resource $color_5  color5
set_from_resource $color_6  color6
set_from_resource $color_7  color7
set_from_resource $color_8  color8
set_from_resource $color_9  color9
set_from_resource $color_10 color10
set_from_resource $color_11 color11
set_from_resource $color_12 color12
set_from_resource $color_13 color13
set_from_resource $color_14 color14
set_from_resource $color_15 color15

# class                 border    bg        fg        indic    child_border
client.focused          $color_5  $color_bg $color_fg $color_5 $color_fg
client.focused_inactive $color_5  $color_bg $color_fg $color_5 $color_7
client.unfocused        $color_bg $color_bg $color_fg $color_5 $color_bg
client.urgent           $color_1  $color_1  $color_fg $color_1 $color_1

# I3 Keybindings

# set mod key (Mod1=<Alt>, Mod4=<Super>)
set $mod Mod4

# use Mouse+$mod to drag floating windows
floating_modifier $mod

# kill focused window
bindsym $mod+Shift+q kill

# scratch pad
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

# launch terminal
bindsym $mod+Return exec --no-startup-id alacritty

# screenshot
bindsym $mod+p exec --no-startup-id flameshot gui

# application launcher
bindsym $mod+d exec --no-startup-id rofi -show combi

# network manager
bindsym $mod+n exec --no-startup-id networkmanager_dmenu

# power menu
bindsym $mod+q exec --no-startup-id $XDG_CONFIG_HOME/rofi/powermenu

# restart i3 inplace
bindsym $mod+Shift+r restart

# toggle bar
bindsym $mod+b exec --no-startup-id polybar-msg cmd toggle

# Media Controls

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -D pulse sset Master 5%+
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -D pulse sset Master 5%-
bindsym XF86AudioMute exec --no-startup-id amixer -D pulse sset Master toggle

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 10
bindsym Shift+XF86MonBrightnessUp exec xbacklight -inc 1
bindsym XF86MonBrightnessDown exec xbacklight -dec 10
bindsym Shift+XF86MonBrightnessDown exec xbacklight -dec 1

# Windows

# focus doesn't follow mouse
focus_follows_mouse no

# toggle fullscreen
bindsym $mod+f fullscreen toggle

# toggle floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# change window focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# resize focused window a lot
bindsym $mod+Left resize grow width 5 px or 5 ppt
bindsym $mod+Down resize shrink height 5 px or 5 ppt
bindsym $mod+Up resize grow height 5 px or 5 ppt
bindsym $mod+Right resize shrink width 5 px or 5 ppt

# resize focused window a bit
bindsym $mod+Shift+Left resize grow width 1 px or 1 ppt
bindsym $mod+Shift+Down resize shrink height 1 px or 1 ppt
bindsym $mod+Shift+Up resize grow height 1 px or 1 ppt
bindsym $mod+Shift+Right resize shrink width 1 px or 1 ppt

# Workspaces

# switch to workspace with urgent window automatically
for_window [urgent=latest] focus

# workspace names
set $ws1 workspace 1:msg
set $ws2 workspace 2:web
set $ws3 workspace 3:txt
set $ws4 workspace 4:a
set $ws5 workspace 5:b
set $ws6 workspace 6:c

# switch to workspace
bindsym $mod+1 $ws1
bindsym $mod+2 $ws2
bindsym $mod+3 $ws3
bindsym $mod+4 $ws4
bindsym $mod+5 $ws5
bindsym $mod+6 $ws6

# move focused container to workspace
bindsym $mod+Ctrl+1 move container to $ws1
bindsym $mod+Ctrl+2 move container to $ws2
bindsym $mod+Ctrl+3 move container to $ws3
bindsym $mod+Ctrl+4 move container to $ws4
bindsym $mod+Ctrl+5 move container to $ws5
bindsym $mod+Ctrl+6 move container to $ws6

# move to workspace with focused container
bindsym $mod+Shift+1 move container to $ws1; $ws1
bindsym $mod+Shift+2 move container to $ws2; $ws2
bindsym $mod+Shift+3 move container to $ws3; $ws3
bindsym $mod+Shift+4 move container to $ws4; $ws4
bindsym $mod+Shift+5 move container to $ws5; $ws5
bindsym $mod+Shift+6 move container to $ws6; $ws6

# assign default workspaces for some applications
assign [class="Slack"] $ws1
assign [class="firefox"] $ws2
assign [class="jetbrains-idea"] $ws3
assign [class="jetbrains-toolbox"] $ws3

# float terminal windows by default
for_window [class="Alacritty"] move scratchpad

# Autostart Applications

# polybar
exec_always --no-startup-id $XDG_CONFIG_HOME/polybar/launch

# authentication agent
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1

# wallpaper
exec --no-startup-id xsetroot -solid "#282828"

# power management
exec --no-startup-id xfce4-power-manager

# set x to blank the screen after 5 minutes
exec --no-startup-id xset s 300 5

# start autolocker
exec --no-startup-id xss-lock -n /usr/lib/xsecurelock/dimmer -l -- xsecurelock

# turn caps lock into excape on tap and ctrl on press
exec --no-startup-id setxkbmap -option ctrl:nocaps; xcape
