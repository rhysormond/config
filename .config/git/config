[user]
    email = git@rhysormond.com
    name = rhysormond
[color]
    ui = auto
[core]
    editor = vim
    excludesfile = ~/.config/git/ignore
    filemode = false
    pager = diffr | less -FRX
[commit]
    verbose = true
[diff]
    algorithm = patience
    tool = vimdiff
[difftool]
    prompt = false
[help]
    autocorrect = 1
[merge]
    tool = vimdiff
[push]
    default = simple
[alias]
    cfg = "!git --git-dir=$HOME/.cfg --work-tree=$HOME"
    run = "!f() { git rr $1 | while read c; do git co $c; $2; done; }; f"
    tmp = "!f() { git co $1 && read && git sh && git co - && git br -D $1; }; f"

    aa = add --all
    ap = add --patch
    br = branch
    ca = commit --amend
    ci = commit
    cm = commit --message
    co = checkout
    di = diff
    dm = diff master...HEAD
    dt = difftool
    gr = log --all --decorate --oneline --graph
    mm = merge-base HEAD master
    rr = rev-list --reverse
    sh = stash
    up = submodule update --init --recursive
