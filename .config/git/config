[core]
    editor = vim
    filemode = false
    hooksPath = ~/.config/git/hooks
    pager = diffr \
        --colors added:none:background:0x33,0x55,0x33 \
        --colors removed:none:background:0x55,0x33,0x33 \
        --colors refine-added:none:background:0x33,0x99,0x33:bold \
        --colors refine-removed:none:background:0x99,0x33,0x33:bold \
        | less -FRX
[advice]
    addIgnoredFile = false
    pushUpdateRejected = false
    resolveConflict = false
    detachedHead = false
[blame]
    coloring = highlightRecent
[branch]
    sort = committerdate
[color]
    ui = always
[commit]
    gpgsign = true
    verbose = true
[diff]
    algorithm = histogram
    tool = vimdiff
[difftool]
    prompt = false
[help]
    autocorrect = 1
[log]
    follow = true
[merge]
    tool = vimdiff
[pull]
    ff = only
[push]
    default = current
    gpgsign = if-asked
[status]
    short = true
[tag]
    gpgsign = true
[alias]
    cfg = "!git --git-dir=$HOME/.cfg --work-tree=$HOME"
    aa = add --all
    ap = add --patch
    bd = branch --delete --force
    br = branch
    ca = commit --amend
    cb = checkout -b
    ci = commit
    cm = commit --message
    co = checkout
    di = diff
    dm = diff master...HEAD
    ds = diff --stat
    dt = difftool
    gr = log --all --decorate --oneline --graph
    mm = merge-base HEAD master
    mt = mergetool
    up = submodule update --init --recursive
