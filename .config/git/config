[user]
    email = git@rhysormond.com
    name = rhysormond
    signingkey = 9A822A229581A606
[color]
    ui = auto
[core]
    editor = vim
    excludesfile = ~/.config/git/ignore
    filemode = false
    pager = diffr | less -FRX
    hooksPath = ~/.config/git/hooks
[commit]
    verbose = true
    gpgsign = true
[diff]
    algorithm = patience
    tool = vimdiff
[difftool]
    prompt = false
[help]
    autocorrect = 1
[merge]
    tool = vimdiff
[push]
    default = current
    gpgsign = if-asked
[tag]
    forceSignAnnotated = true
[gpg]
    program = gpg2
[alias]
    cfg = "!git --git-dir=$HOME/.cfg --work-tree=$HOME"

    aa = add --all
    ap = add --patch
    br = branch
    bd = branch --delete --force
    ca = commit --amend
    cb = checkout -b
    ci = commit
    cm = commit --message
    co = checkout
    di = diff
    dm = diff master...HEAD
    dt = difftool
    gr = log --all --decorate --oneline --graph
    mm = merge-base HEAD master
    mt = mergetool
    up = submodule update --init --recursive
