[user]
    email = git@rhysormond.com
    name = rhysormond
    signingkey = 9A822A229581A606
[core]
    editor = nvim
    filemode = false
    hooksPath = ~/.config/git/hooks
    pager = diffr \
        --colors added:none:background:0x33,0x55,0x33 \
        --colors removed:none:background:0x55,0x33,0x33 \
        --colors refine-added:none:background:0x33,0x99,0x33:bold \
        --colors refine-removed:none:background:0x99,0x33,0x33:bold \
        | less -FRX
[advice]
    addIgnoredFile = false
    pushUpdateRejected = false
    resolveConflict = false
    detachedHead = false
[blame]
    coloring = highlightRecent
[branch]
    sort = committerdate
[color]
    ui = auto
[commit]
    gpgsign = true
    verbose = true
[diff]
    algorithm = histogram
    tool = nvimdiff
[difftool "nvimdiff"]
    cmd = "nvim -d $LOCAL $REMOTE"
[help]
    autocorrect = 1
[log]
    follow = true
[merge]
    tool = nvimdiff
[mergetool "nvimdiff"]
    cmd = "nvim -d $BASE $LOCAL $REMOTE $MERGED"
[pull]
    ff = only
[push]
    default = current
    gpgsign = if-asked
[status]
    short = true
[tag]
    gpgsign = true
[alias]
    cfg = "!git --git-dir=$HOME/.cfg --work-tree=$HOME"
    cfx = "!git commit --edit --file=$(git rev-parse --git-dir)/COMMIT_EDITMSG"
    lgb = lg --branches
    lgs = lg --stat
    lgx = lg --branches --stat
    aa = add --all
    ap = add --patch
    bd = branch --delete --force
    br = branch\
        --format='%(HEAD) %(color:yellow)%(objectname:short) %(color:reset)%(refname:short)'
    ca = commit --amend
    cb = checkout -b
    ci = commit
    cm = commit --message
    co = checkout
    di = diff
    dm = diff master...HEAD
    dt = difftool
    lg = log --graph\
        --format='%C(white)%S%C(auto)%d %n%C(yellow)%h %<(10,trunc)%C(blue)%an %Cgreen(%cr) %C(reset)%n%<(80,trunc)%s'
    mm = merge-base HEAD master
    mt = mergetool
