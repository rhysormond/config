[user]
    email = git@rhysormond.com
    name = rhysormond
    signingkey = 9A822A229581A606
[color]
    ui = auto
[core]
    editor = vim
    excludesfile = ~/.config/git/ignore
    filemode = false
    pager = diffr \
        --colors added:none:background:0x33,0x55,0x33 \
        --colors removed:none:background:0x55,0x33,0x33 \
        --colors refine-added:none:background:0x33,0x99,0x33:bold \
        --colors refine-removed:none:background:0x99,0x33,0x33:bold \
        | less -FRX
    hooksPath = ~/.config/git/hooks
[commit]
    verbose = true
    gpgsign = true
[diff]
    algorithm = histogram
    tool = vimdiff
[difftool]
    prompt = false
[help]
    autocorrect = 1
[merge]
    tool = vimdiff
[push]
    default = current
    gpgsign = if-asked
[tag]
    forceSignAnnotated = true
[alias]
    cfg = "!git --git-dir=$HOME/.cfg --work-tree=$HOME"

    aa = add --all
    ap = add --patch
    br = branch --sort=committerdate
    bd = branch --delete --force
    ca = commit --amend
    cb = checkout -b
    ci = commit
    cm = commit --message
    co = checkout
    di = diff
    dm = diff master...HEAD
    ds = diff --stat
    dt = difftool
    gr = log --all --decorate --oneline --graph
    mm = merge-base HEAD master
    mt = mergetool
    up = submodule update --init --recursive
