configuration {
    cycle: true;
    hide-scrollbar: true;
}

* {
    background-color: #282828;
    border-color: #a89984;
    font: "Fira Code 28";
    text-color: #ebdbb2;
}

element selected {
    text-color: #d79921;
}

#inputbar {
    children: [ textbox-prompt-colon, entry ];
}

#textbox-prompt-colon {
    expand: false;
    str: "~ > ";
    text-color: #b16286;
}

window {
    border: 1px;
    height: 50%;
    padding: 10;
    width: 20%;
}

