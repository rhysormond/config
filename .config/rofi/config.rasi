configuration {
    cycle: true;
    hide-scrollbar: true;
}

* {
    background-color: #282828;
    border-color: #d0d0d0;
    text-color: #d0d0d0;
    font: "Fira Code 14";
}

element selected {
    text-color: #d8af5f;
}

#inputbar {
    children: [ textbox-prompt-colon, entry ];
}

#textbox-prompt-colon {
    expand: false;
    str: "~ > ";
    text-color: #d7afaf;
}

window {
    border: 1px;
    height: 50%;
    padding: 10;
    width: 20%;
}

