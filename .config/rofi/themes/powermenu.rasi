@import "shared.rasi"
* {
  background-color: @background;
  text-color: @foreground;
  font: @icon-font;
}

#window {
  children: [ horibox ];
}

#horibox {
  children: [ listview ];
}

#listview {
  layout: horizontal;
  spacing: -0.5%;
  lines: 4;
}

#element {
  padding: @option-element-padding;
}

#element.selected {
  background-color: @accent;
  text-color: @background;
}

