[commit]
  gpgsign = true
  verbose = true
[delta]
  navigate = true
  pager = less -FRX
  theme = zenburn
  syntax-theme = zenburn
[diff]
  colorMoved = default
  algorithm = histogram
[help]
  autocorrect = 1
[interactive]
  diffFilter = delta --color-only
[log]
  follow = true
[merge]
  conflictstyle = diff3
[pull]
  ff = only
[push]
  default = current
  gpgsign = if-asked
[status]
  short = true
[tag]
  gpgsign = true
[alias]
  cfx = "!git commit --edit --file=$(git rev-parse --git-dir)/COMMIT_EDITMSG"
  rem = "!git reset $(git merge-base master $(git branch --show-current))"
  ups = "!git branch --set-upstream-to=origin/`git symbolic-ref --short HEAD`"
  lgb = lg --branches
  lgs = lg --stat
  lgx = lg --branches --stat
  aa = add --all
  ap = add --patch
  bd = branch --delete --force
  br = branch --format='%(HEAD) %(color:yellow)%(objectname:short) %(color:green)%(committerdate:short) %(color:reset)%(refname:short)'
  ca = commit --amend
  cb = checkout -b
  ci = commit
  cm = commit --message
  co = checkout
  di = diff
  dm = diff master...HEAD
  dt = difftool
  ls = stash list --pretty='%C(yellow)%h %>(12)%C(green)%cr %C(reset)%s'
  lg = log --graph --format='%C(white)%S%C(auto)%d %n%C(yellow)%h %>(12)%C(green)%cr %<(25,trunc)%C(blue)%an %C(reset)%n%<(80,trunc)%s'
  mm = merge-base HEAD master
  mt = mergetool
  pu = push --set-upstream
