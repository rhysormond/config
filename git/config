[user]
  email = git@rhysormond.com
  name = rhysormond
  signingkey = ~/.ssh/signing.id_rsa.pub
[gpg]
  format = ssh
[gpg "ssh"]
  allowedSignersFile = ~/.ssh/allowed_signers
[init]
  defaultBranch = main
[core]
  editor = vim
  filemode = false
  hooksPath = ~/.config/git/hooks
  pager = less -FRX
[advice]
  addIgnoredFile = false
  pushUpdateRejected = false
  resolveConflict = false
  detachedHead = false
[blame]
  coloring = highlightRecent
[branch]
  sort = committerdate
[color]
  ui = auto
[commit]
  gpgsign = true
  verbose = true
[diff]
  colorMoved = default
  algorithm = histogram
[help]
  autocorrect = 1
[log]
  follow = true
[merge]
  conflictstyle = diff3
[pull]
  ff = only
[push]
  default = current
  autoSetupRemote = true
  gpgsign = if-asked
[status]
  short = true
[tag]
  gpgsign = true
[rerere]
  enabled = true
[alias]
  cfx = "!git commit --edit --file=`git rev-parse --git-dir`/COMMIT_EDITMSG"
  lgb = lg --branches
  lgs = lg --stat
  lgx = lg --branches --stat
  aa = add --all
  ap = add --patch
  bd = branch --delete --force
  br = branch --format='%(HEAD) %(color:yellow)%(objectname:short) %(color:green)%(committerdate:short) %(color:reset)%(refname:short)'
  ca = commit --amend
  cb = checkout -b
  ci = commit
  cm = commit --message
  co = checkout
  dm = diff master...HEAD
  ls = stash list --pretty='%C(yellow)%h %>(12)%C(green)%cr %C(reset)%s'
  lg = log --graph --format='%C(white)%S%C(auto)%d %n%C(yellow)%h %>(12)%C(green)%cr %<(25,trunc)%C(blue)%an %C(reset)%n%<(80,trunc)%s'
  mm = merge-base HEAD master
  wd = diff --word-diff
