[user]
    email = rhysormond@gmail.com
    name = rhys
[core]
    editor = vim
    excludesfile = ~/.gitignore_global
    filemode = false
    pager = less -FRX
[push]
    default = simple
[diff]
    tool = vimdiff
[merge]
    tool = vimdiff
[color]
    ui = true
[alias]
    alias = "!git config --get-regexp '^alias.' | sed -e s/'^alias.'// -e s/' '/' = '/"
    cfg = "!git --git-dir=$HOME/.cfg/ --work-tree=$HOME"

    aa = add --all
    ap = add --patch
    br = branch
    ca = commit --amend --verbose
    cb = checkout -B
    ci = commit --verbose
    cm = commit --message
    co = checkout
    dh = diff HEAD~1
    di = diff
    fa = fetch --all
    gr = log --all --decorate --oneline --graph
    lh = log -1
    lo = log
    st = status
