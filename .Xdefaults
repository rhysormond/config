! global settings
*.font:       xft:DejaVu Sans Mono:size=10
Xft.dpi:       96
Xft.antialias: 1
Xft.autohint:  1
Xft.hinting:   1
Xft.hintstyle: hintslight
Xft.lcdfilter: lcdlight
Xft.rgba:      rgb

! term settings
URxvt.fading:         10
URxvt*termName:       rxvt-256color
URxvt.depth:          32
URxvt*lineSpace:      1
URxvt.letterSpace:    -1
URxvt.iso14755:       false
URxvt.iso14755_52:    false
URxvt*geometry:       65x17
URxvt.scrollBar:      false
URxvt*loginShell:     true
URxvt.internalBorder: 15
URxvt.perl-ext:       default,matcher
URxvt.url-launcher:   firefox
URxvt.matcher.button: 1


! colorscheme
! hard contrast: *background: #1d2021
*background: #282828
! soft contrast: *background: #32302f
*foreground: #ebdbb2
! Black + DarkGrey
*color0:     #282828
*color8:     #928374
! DarkRed + Red
*color1:     #cc241d
*color9:     #fb4934
! DarkGreen + Green
*color2:     #98971a
*color10:    #b8bb26
! DarkYellow + Yellow
*color3:     #d79921
*color11:    #fabd2f
! DarkBlue + Blue
*color4:     #458588
*color12:    #83a598
! DarkMagenta + Magenta
*color5:     #b16286
*color13:    #d3869b
! DarkCyan + Cyan
*color6:     #689d6a
*color14:    #8ec07c
! LightGrey + White
*color7:     #a89984
*color15   : #ebdbb2
