" line numbers
set number relativenumber

" no bells
set visualbell

" search
set smartcase ignorecase

" highlight search results 
set hlsearch

" use the system clipboard with leader
noremap <leader>c "*c
noremap <leader>d "*d
noremap <leader>y "*y
noremap <leader>p "*p

" use space as the leader key
let mapleader=" "

" set jk to escape
inoremap jk <Esc>
cnoremap jk <Esc>

" use enter to clear search results
nnoremap <CR> :noh<CR><CR>

" split window navigation
nnoremap <c-h> <c-w>h
nnoremap <c-j> <c-w>j
nnoremap <c-k> <c-w>k
nnoremap <c-l> <c-w>l

" JetBrains commands
set commentary " enable TPope commentary plugin emulation
set surround " enable TPope surround plugin emulation
set ideajoin " use IDE joining logic
