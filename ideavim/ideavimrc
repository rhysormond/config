" line numbers
set number relativenumber

" no bells
set visualbell

" highlight search results (on by default on neovim)
set hlsearch

" use enter to clear search results
nnoremap <CR> :noh<CR><CR>

" split window navigation (not properly sourced from nvim config)
nnoremap <c-h> <c-w>h
nnoremap <c-j> <c-w>j
nnoremap <c-k> <c-w>k
nnoremap <c-l> <c-w>l

" JetBrains commands
set commentary " enable TPope commentary plugin emulation
set surround " enable TPope surround plugin emulation
set ideajoin " use IDE joining logic

" fuzzy finding integration
nnoremap <leader>fa :action FindInPath<cr>
nnoremap <leader>fl :action Find<cr>
nnoremap <leader>ff :action GotoFile<cr>
nnoremap <leader>fb :action RecentFiles<cr>
